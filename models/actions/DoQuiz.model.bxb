action (DoQuiz) {
  type (Commit)
  description (Evaluates answer and updates the quiz)
  collect {
    input (quiz) {
      type (Quiz)
      min (Required) max (One)
    }
    input (answer) {
      type (Answer)
      min (Optional) max (One)
    }
  }
  output (Quiz) {
    throws {
      error (MissingAnswer) {
        on-catch {
          prompt (answer)
        }
      }
    }
  }
}
