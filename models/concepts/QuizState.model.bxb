structure (QuizState) {
  property (currentQuestion) {
    type (Question)
    min (Optional) max (One)
    description(Question to ask in current state)
  }
  property (lastScore) {
    type (Score)
    min (Optional) max (One)
    description(User's last score)
  }
  property (started) {
    type (core.Boolean)
    min (Optional) max (One)
    visibility (Private)
  }
  property (completed) {
    type (core.Boolean)
    min (Optional) max (One)
    visibility (Private)
  }
}
