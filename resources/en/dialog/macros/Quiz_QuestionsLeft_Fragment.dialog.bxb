template-macro-def (quiz-questions-left-fragment) {
  params {
    param (questionsLeft) {
      type (core.Integer)
      min (Required)
      max (One)
    }
  }
  content {
    if (questionsLeft == 0) {
      template ("No more questions left.")
    } else-if (questionsLeft == 1) {
        template ("One question left.")
    } else {
        template ("#{number(questionsLeft)} questions left.")      
    }
  }
}
