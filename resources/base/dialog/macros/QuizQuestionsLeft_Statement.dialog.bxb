template-macro-def (quiz-questions-left-statement) {
  params {
    param (questionsLeft) {
      type (core.Integer)
      min (Required)
      max (One)
    }
  }
  content {
    if (questionsLeft == 1) {
        template ("There is one question left.")
    } else {
        template ("There are #{number(questionsLeft)} questions left.")      
    }
  }
}
