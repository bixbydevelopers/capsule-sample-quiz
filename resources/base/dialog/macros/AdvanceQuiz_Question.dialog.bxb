template-macro-def (advance-quiz-question) {
  params {
    param (questionsLeft) {
      type (core.Integer)
      min (Required)
      max (One)
    }
  }
  content {
    if (questionsLeft == 0) {
      template ("Do you want to see how you did?")
    } else-if (questionsLeft == 1) {
      template ("Do you want to answer the last question?")
    } else {
      template ("Do you want to answer the next question?")

    }
  }
}
